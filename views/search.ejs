        <div class="modal-content">
            <div class="modal-header">
            <h5 class="modal-title" id="search-plantLabel">Plant Result</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <ul class="plants">
                    <li><span>Name: </span><span id="plantName"></span></li>
                    <li><span>Pronounciation: </span><span id="pronounce"></span></li>
                    <li><span>Family Name: </span><span id="familyName"></span></li>
                    <li><span>Scientific Name: </span><span id="scientificName"></span></li>
                    <li><span>Use: </span><span id="use"></span></li>
                    <li><span>Description: </span><span id="description"></span></li>
                    <li><img id="image" src=""></li>
                </ul>
            </div>
            <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <!-- <button type="button" class="btn btn-primary">Save changes</button> -->
            </div>
        </div>
