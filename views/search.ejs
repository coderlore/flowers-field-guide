    <!--Search-->
    <section class="bg-warning text-dark p-5 mt-5">
        <div class="container">
            <div class="d-md-flex justify-content-between align-items-center">
                <h3 class="mb-3 mb-md-0">Search For a Plant in Our Database</h3>
                <div class="input-group plant-search">
                    <input 
                        type="text" 
                        class="form-control" 
                        placeholder="Search database" />
                    <button class="btn btn-dark btn-lg" data-bs-toggle="modal" data-bs-target="#search-plant" type="button" id="search">Search</button>
                </div>
            </div>
        </div>
    </section>

    <!-- Modal -->
    <div class="modal fade" id="search-plant" tabindex="-1" aria-labelledby="search-plantLabel" aria-hidden="true">
